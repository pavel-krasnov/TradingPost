<%- include("../partials/header") %>
<div class="container">
	<div class="add-form" style="width: 40%; margin: auto;">
		<h1>Add an item</h1>
		<form action="/items" method="post">
			<div class="form-group">
				<input class="form-control" type="text" name="name" placeholder="Item name">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="image" placeholder="Link to item image">
			</div>
			<div class="form-group">
				<input class="form-control" type="number" name="price" min="0.01" step="0.01" placeholder="Price">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="description" placeholder="Description">
			</div>
			<div class="form-group">
				<input class="btn btn-primary btn-block" type="submit">
			</div>
		</form>
		<a href="/items">Back</a>
	</div>
</div>
<%- include("../partials/footer") %>