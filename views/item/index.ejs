<%- include('../partials/header.ejs') %>
<div class="container">
	<header class="jumbotron">
		<h1>Welcome to Trading Post!</h1>
		<p>Sell and buy from birth to die!</p>
		<% if (currentUser) { %>
			<p>
				<a class="btn btn-primary btn-lg" href="/items/new">Add an item</a>
			</p>

		<% } %>
	</header>
	<div class="row text-center">
		<% items.forEach((item) => { %>
			<div class="col-md-3 col-sm-6">
				<div class="card">
					<img class="card-img-top" src="<%= item.image %>" width="250px">
					<div class="card-body">
						<h5 class="card-title"><%= item.name %></h5>
						<a class="btn btn-primary" href="/items/<%= item._id %>">More</a>
					</div>
				</div>
			</div>
		<% }) %>
	</div>
	<%- include('../partials/footer.ejs') %>
</div>