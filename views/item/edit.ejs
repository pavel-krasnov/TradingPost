<%- include("../partials/header") %>
<div class="container">
	<div class="add-form" style="width: 40%; margin: auto;">
		<h1>Edit a item</h1>
		<form action="/items/<%= item._id %>?_method=put" method="post">
			<div class="form-group">
				<input class="form-control" type="text" name="item[name]" value="<%= item.name %>">
			</div>
			<div class="form-group">
				<input class="form-control" type="number" name="item[price]" min="0.01" step="0.01" value="<%= item.price %>">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="item[image]" value="<%= item.image %>">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="item[description]" value="<%= item.description %>">
			</div>
			<div class="form-group">
				<input class="btn btn-primary btn-block" type="submit">
			</div>
		</form>
		<a href="/items">Back</a>
	</div>
</div>
<%- include("../partials/footer") %>